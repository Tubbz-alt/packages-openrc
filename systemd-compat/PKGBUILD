pkgbase=systemd-compat
pkgname=('systemd-compat' 'libsystemd-compat')
pkgver=232
pkgrel=1
arch=('any')
license=('GPL2')
url="https://github.com/manjaro/packages-openrc"

package_systemd-compat() {
    pkgdesc="systemd compatibility package"
    provides=("systemd=${pkgver}" "systemd-tools=${pkgver}")
    depends=('eudev')
    conflicts=('systemd-tools' 'systemd' 'eudev-systemdcompat' 'eudev-systemd')
    replaces=('eudev-systemdcompat')
}

package_libsystemd-compat() {
    pkgdesc="systemd client libraries compatibility package"
    provides=("libsystemd=${pkgver}")
    depends=('libeudev')
    conflicts=('libsystemd' 'eudev-systemdcompat' 'libeudev-systemd')
    replaces=('eudev-systemdcompat')
}
